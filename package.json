{
  "name": "todo_list",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf build && node esbuild.js",
    "dev": "nodemon",
    "start": "node build/index.js",
    "orm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -f ./ormconfig.ts",
    "db:generate": "yarn orm migration:generate -n",
    "db:up": "yarn orm migration:run",
    "db:down": "yarn orm migration:revert"
  },
  "dependencies": {
    "@fastify/cors": "^8.2.0",
    "@fastify/one-line-logger": "^1.1.1",
    "dotenv": "^16.0.3",
    "esbuild-plugin-copy": "^2.0.2",
    "fastify": "^4.12.0",
    "fastify-plugin": "^4.5.0",
    "mysql2": "^3.1.2",
    "nodemon": "^2.0.20",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typeorm": "0.2.41",
    "yup": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "esbuild": "^0.17.7",
    "typescript": "^4.9.5"
  }
}
